<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Network permissions for HTTP client -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    
    <!-- Background service permissions -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    
    <!-- Storage permissions for caching -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" 
        android:maxSdkVersion="28" />
    
    <!-- Vibration for notifications -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".ABClientApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ABClient"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:targetApi="31">

        <!-- Main Activity -->
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.ABClient"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Profile Management Activity -->
        <activity
            android:name=".ui.profile.ProfileActivity"
            android:theme="@style/Theme.ABClient"
            android:parentActivityName=".ui.main.MainActivity" />

        <!-- Settings Activity -->
        <activity
            android:name=".ui.settings.SettingsActivity"
            android:theme="@style/Theme.ABClient"
            android:parentActivityName=".ui.main.MainActivity" />

        <!-- Game Activity -->
        <activity
            android:name=".ui.game.GameActivity"
            android:theme="@style/Theme.ABClient"
            android:parentActivityName=".ui.main.MainActivity"
            android:configChanges="orientation|screenSize|keyboardHidden" />

        <!-- Profiles Management Activity -->
        <activity
            android:name=".ui.profiles.ProfilesActivity"
            android:theme="@style/Theme.ABClient"
            android:parentActivityName=".ui.main.MainActivity" />

        <!-- Navigator Activity -->
        <activity
            android:name=".ui.navigator.NavigatorActivity"
            android:theme="@style/Theme.ABClient"
            android:parentActivityName=".ui.main.MainActivity" />

        <!-- Fish Advisor Activity -->
        <activity
            android:name=".ui.fishadvisor.FishAdvisorActivity"
            android:theme="@style/Theme.ABClient"
            android:parentActivityName=".ui.main.MainActivity" />

        <!-- Inventory Activity -->
        <activity
            android:name=".ui.inventory.InventoryActivity"
            android:theme="@style/Theme.ABClient"
            android:parentActivityName=".ui.main.MainActivity" />

        <!-- Tab Manager Activity -->
        <activity
            android:name=".ui.tabmanager.TabManagerActivity"
            android:theme="@style/Theme.ABClient"
            android:parentActivityName=".ui.main.MainActivity" />

        <!-- Timer Manager Activity -->
        <activity
            android:name=".ui.timer.TimerManagerActivity"
            android:theme="@style/Theme.ABClient"
            android:parentActivityName=".ui.main.MainActivity" />

        <!-- Trading Activity -->
        <activity
            android:name=".ui.trading.TradingActivity"
            android:theme="@style/Theme.ABClient"
            android:parentActivityName=".ui.main.MainActivity" />

        <!-- Background Service для поддержания онлайн статуса -->
        <service
            android:name=".service.OnlineStatusService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

        <!-- Work Manager для периодических задач -->
        <service
            android:name="androidx.work.impl.foreground.SystemForegroundService"
            android:foregroundServiceType="dataSync"
            tools:node="merge" />

        <!-- HTTP Proxy Service -->
        <service
            android:name=".service.HttpProxyService"
            android:enabled="true"
            android:exported="false" />

        <!-- File Provider для sharing логов -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="ru.neverlands.abclient.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- Отключаем автоматическую инициализацию WorkManager -->
        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="${applicationId}.androidx-startup"
            android:exported="false"
            tools:node="merge">
            <meta-data
                android:name="androidx.work.WorkManagerInitializer"
                android:value="androidx.startup"
                tools:node="remove" />
        </provider>
    </application>
</manifest>