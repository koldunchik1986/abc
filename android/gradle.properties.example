# AndroidX properties
android.useAndroidX=true
android.enableJetifier=true

# JDK Configuration
android.enableBuildCache=false

# Build optimization
org.gradle.jvmargs=-Xmx4096m -Dfile.encoding=UTF-8
org.gradle.parallel=true
org.gradle.caching=true
org.gradle.configureondemand=true

# Kotlin code style
kotlin.code.style=official

# Non-transitive R classes
android.nonTransitiveRClass=true

# Enables namespacing of each library's R class
android.nonFinalResIds=true

# JDK 21 compatibility fixes
android.enableJdkToolchain=false
android.useAndroidJdkImage=false
org.gradle.java.home=C:\\Program Files\\Eclipse Adoptium\\jdk-21.0.8.9-hotspot

# Disable R8 full mode to avoid JDK issues
android.enableR8.fullMode=false

# Disable Gradle daemon for stability
org.gradle.daemon=false

# Gradle configuration cache
org.gradle.configuration-cache=true

# Release signing configuration (REPLACE WITH YOUR VALUES)
# RELEASE_STORE_FILE=your-key.jks
# RELEASE_KEY_ALIAS=your-alias
# RELEASE_STORE_PASSWORD=your-store-password
# RELEASE_KEY_PASSWORD=your-key-password